---
import imgfooter from "../assets/imgfooter.webp";
---

<footer class="footer">
    <section class="footer__nav">
       
        <a href="/">
            <img src="logo.svg" alt="Company Logo" class="logo" />
        </a>
         
        <section class="social">
            <a
              href="https://www.facebook.com/profile.php?id=100090406220454"
              target="_blank"
            >
              <svg
                class="face"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                ><path
                  fill="currentColor"
                  d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H8v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95z"
                ></path></svg
              ></a
            >
            <a
              href="https://www.google.com/maps/place/Rodriguez+Salvage+Yard/@35.57192,-78.4007095,15z/data=!4m2!3m1!1s0x0:0x933033b7f85aff18?sa=X&ved=2ahUKEwiwq_D-z97-AhVXRzABHQSTBKsQ_BJ6BAhqEAk"
              target="_blank"
            >
              <svg
                class="google"
                xmlns="http://www.w3.org/2000/svg"
                width="512"
                height="512"
                viewBox="0 0 512 512"
                ><path
                  fill="currentColor"
                  d="m473.16 221.48l-2.26-9.59H262.46v88.22H387c-12.93 61.4-72.93 93.72-121.94 93.72c-35.66 0-73.25-15-98.13-39.11a140.08 140.08 0 0 1-41.8-98.88c0-37.16 16.7-74.33 41-98.78s61-38.13 97.49-38.13c41.79 0 71.74 22.19 82.94 32.31l62.69-62.36C390.86 72.72 340.34 32 261.6 32c-60.75 0-119 23.27-161.58 65.71C58 139.5 36.25 199.93 36.25 256s20.58 113.48 61.3 155.6c43.51 44.92 105.13 68.4 168.58 68.4c57.73 0 112.45-22.62 151.45-63.66c38.34-40.4 58.17-96.3 58.17-154.9c0-24.67-2.48-39.32-2.59-39.96Z"
                ></path></svg
              >
            </a>
          </section>
        
          <ul class="nav__list">
            <li><a href="#hero" class="nav__link2">Home</a></li>
            <li><a href="#services" class="nav__link">Services</a></li>
            <li><a href="#benefits" class="nav__link2">Benefits</a></li>
            <li><a href="#how" class="nav__link2">How it works</a></li>
            <li><a href="#testimonials" class="nav__link2">Testimonials</a></li>
        </ul>
    </section>
    <img src={imgfooter} alt="junk cars" class="imgfooter">
</footer>
<script src="../scripts/navigator.ts"></script>

<style>

    .footer{
        display: flex;
        background: var(--darkletter);
        
    }
    .footer__nav{
        flex: 1;
        display: flex;
        justify-content: space-around;
        align-items: center;
        height: auto;
       
    }
    .footer__nav .logo {
       margin-bottom: 4rem;
       margin-left: 2rem;
        height: 8rem;
        width: auto;
    }
    
    
    .nav__list{
        font-family: var(--fontBrand);
        display: flex;
        flex-direction: column;
        margin-bottom: 5.5rem;
        margin-right: 4rem;
        padding: 0;
        gap: 1rem;
    }
    .imgfooter{
        
        width: 50%;
        height: auto;
    }
    .social {
    background: transparent;
    display: flex;
    justify-content: start;
    gap: 2rem;
    align-items: center;
    height: 3rem;
    width: 8rem;
    border-radius: 0.2rem;

    margin-top: 2rem;
    transition: 500ms;
  }
  .social:hover {
    background: var(--terciaryColor);
    cursor: pointer;
    box-shadow: 8px 8px 0px 0 rgba(101, 157, 167, 0.3);
    -webkit-box-shadow: 8px 8px 0px 0 rgba(101, 157, 167, 0.3);
    -moz-box-shadow: 8px 8px 0px 0 rgba(101, 157, 167, 0.3);
  }
  .face {
    width: 40px;
    height: auto;
    transition: 500ms;
  }
  a:hover .face {
    transform: translate(-2px, -10px);
  }

  .google {
    max-width: 35px;
    height: auto;
    transition: 500ms;
  }
  a:hover .google {
    transform: translate(-2px, -10px);
  }

    @media screen and (max-width:835px) {
        .footer{
           height: 20rem;
        }
        .imgfooter{
            height: auto;
            object-fit: cover;
            width: 30%;
            
        }
    }
    @media screen and (max-width:1100px){
        .footer{
            padding: 9rem 0;
        }
        .footer__nav{
            flex-direction: column;
        }
        
        .imgfooter{

            display: none;
            
        }
        .nav__list{
            margin-top: -1rem;
            margin-left: -4rem;
            font-size: 20px;
        }
        .social{
          margin-top: -1rem;
            margin-bottom: 4rem;
        }
    }
</style>